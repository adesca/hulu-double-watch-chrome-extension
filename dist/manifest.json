{
  "manifest_version": 2,
  "name": "hulu-simulwatch",
  "version": "1.0",
  "description": "Adds a red border to all webpages matching mozilla.org.",
  "icons": {
    "48": "icons/fancy-d.jpg"
  },
  "background": {
    "scripts": [
      "background-script.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-script.js"
      ],
//      "css": [
//        "static/chat-styles.css",
//        "static/message-styles.css"
//      ]
    }
  ],
  "permissions": [
    "tabs"
  ],
  "page_action": {
    "browser_style": true,
    "default_icon": {
      "48": "icons/fancy-d.jpg"
    },
    "show_matches": ["<all_urls>"]
  }
}
